    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.1-alpha.1",
    "depcheck": "^1.0.0",
    "eslint": "^7.9.0",
    "eslint-plugin-header": "^3.0.0",
